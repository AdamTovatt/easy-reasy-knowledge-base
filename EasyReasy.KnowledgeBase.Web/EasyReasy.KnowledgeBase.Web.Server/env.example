# Knowledge Base Web Server Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_CONNECTION_STRING=Data Source=knowledgebase.db

# Vector Store Configuration
VECTOR_STORE_SAVE_PATH=vector_store.json

# Ollama Server Configuration
# You can add multiple servers by incrementing the numbers (e.g., OLLAMA_SERVER_URL_1, OLLAMA_SERVER_URL_2)
OLLAMA_SERVER_URL_1=http://localhost:11434
OLLAMA_SERVER_API_KEY_1=your-ollama-api-key-here

# Ollama Model Configuration
OLLAMA_EMBEDDING_MODEL_NAME=nomic-embed-text
OLLAMA_SMALL_TEXT_COMPLETION_MODEL_NAME=llama3.2:3b
OLLAMA_LARGE_TEXT_COMPLETION_MODEL_NAME=llama3.1:8b
OLLAMA_REASONING_TEXT_COMPLETION_MODEL_NAME=qwen3:8b

# JWT Configuration (generate a secure random string)
JWT_SIGNING_SECRET=your-super-secure-jwt-signing-secret-at-least-32-characters-long

# Logging Configuration
LOG_LEVEL=Information
